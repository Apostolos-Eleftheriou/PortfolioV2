---
interface Props {
    skill: {
        name: string;
        logo: string;
        brightnessFilter?: boolean;
    };
}

const { skill } = Astro.props;
---

<div class="skill-card">
    <div class="w-full p-3 flex justify-center items-center h-20">
        <img
            src={skill.logo}
            alt={skill.name}
            class={`w-full h-full object-contain ${skill.brightnessFilter ? "brightness-150" : ""}`}
            loading="eager"
        />
    </div>
    <div class="text-white text-center font-semibold text-sm varela-font">
        {skill.name}
    </div>
</div>
