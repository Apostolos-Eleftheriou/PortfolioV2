---
import { portfolioData } from "../data/portfolio";
import SectionTitle from "./SectionTitle.astro";
---

<section id="about">
    <div class="container mx-auto max-w-3xl">
        <SectionTitle title="A few words about myself" class="text-black" />

        <div class="mt-8">
            {
                portfolioData.bio.map((paragraph) => (
                    <p class="text-lg font-bold italic leading-8 text-gray-800 fade-in mb-4 varela-font">
                        {paragraph}
                    </p>
                ))
            }
        </div>
    </div>
</section>
