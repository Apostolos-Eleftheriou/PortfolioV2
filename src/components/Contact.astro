---
import { portfolioData } from "../data/portfolio";
---

<section id="contact" class="py-16 px-4 relative overflow-hidden z-10">
    <div
        class="bg-[#252525] rounded-lg p-8 text-center shadow-2xl custom-400 m-auto"
    >
        <div class="flex justify-center mb-6 p-2">
            <img
                src={portfolioData.personalImage}
                alt={portfolioData.name}
                class="rounded-full shadow-2xl w-36 h-36 object-cover"
                loading="lazy"
            />
        </div>
        <p class="mb-2 text-xl varela-font font-semibold">
            {portfolioData.name}
        </p>
        <p class="text-md font-semibold mb-8 text-[#646464] varela-font">
            {portfolioData.title} @{portfolioData.company}
        </p>
        <p
            id="contactBtn"
            class="inline-block px-8 py-4 rounded-lg font-bold text-lg italic cme cursor-pointer varela-font"
        >
            Let's get in touch!
        </p>
        <p>
            <a
                href={portfolioData.resumeLink}
                target="_blank"
                class="inline-block px-8 py-4 rounded-lg font-bold text-lg italic cursor-pointer text-right hover:text-gray-400 varela-font"
                >View Full Resume
                <i class="fa-solid fa-arrow-up-right-from-square ml-1"></i>
            </a>
        </p>
        <div>
            <p class="text-gray-400 mb-6 font-semibold varela-font">
                Connect with me on social media:
            </p>
            <div class="flex gap-2 justify-center contact">
                {
                    portfolioData.socials.map((social) => (
                        <a
                            href={social.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-white text-3xl transition-all duration-300 p-2"
                            style="display: inline-block;"
                            title={social.name}
                        >
                            <i class={`fab fa-${social.icon}`} />
                        </a>
                    ))
                }
            </div>
        </div>
    </div>

    <div class="background-two">
        <div class="circle-two">
            <div class="circle1-two">
                <div class="circle2-two"></div>
            </div>
        </div>
    </div>
</section>

<script define:vars={{ portfolioData }}>
    const email = portfolioData.email;
    const btn = document.getElementById("contactBtn");

    function handleClick() {
        btn.textContent = email;
        btn.classList.remove("cursor-pointer");
        setTimeout(() => {
            btn.removeEventListener("click", handleClick);
        }, 300);
    }
    btn.addEventListener("click", handleClick);
</script>

<style>
    a[href^="mailto"] {
        transition: all 0.6s ease;
    }

    a[href^="mailto"]:hover {
        background-color: #e5e7eb !important;
        color: black !important;
        border-color: #2d2d2d !important;
    }
</style>
