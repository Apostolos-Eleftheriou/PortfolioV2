---
import { portfolioData } from "../data/portfolio";
---

<section id="contact" class="py-16 px-4 relative overflow-hidden z-10">
    <div
        class="bg-[#252525] rounded-lg p-8 text-center shadow-2xl max-w-[400px] m-auto"
    >
        <div class="flex justify-center shrink-0 mb-6">
            <img
                src="/images/me.jpeg"
                alt="Apostolis Eleftheriou"
                class="rounded-full shadow-2xl w-36"
                loading="lazy"
            />
        </div>
        <p class="mb-2 text-xl" style="font-family: 'Poppins', sans-serif;">
            Apostolis Eleftheriou
        </p>
        <p
            class="text-md font-semibold mb-8 text-[#646464]"
            style="font-family: 'Poppins', sans-serif;"
        >
            Frontend Engineer @Eurobank
        </p>
        <p
            class="inline-block px-8 py-4 rounded-lg font-bold text-lg italic cme cursor-pointer"
            onclick="this.textContent='eleftheriou.apostolis@gmail.com'; this.onclick=null;this.classList.remove('cursor-pointer');"
        >
            Let's get in touch!
        </p>
        <p>
            <a
                href="https://drive.google.com/file/d/1bE6YL9Xw8IRo44NFebmnVn4dbG6LiDAT/view?usp=sharing"
                target="_blank"
                class="inline-block px-8 py-4 rounded-lg font-bold text-lg italic cursor-pointer text-right hover:text-gray-400"
                style="font-family:'Poppins', sans-serif"
                >View Full Resume
                <i class="fa-solid fa-arrow-up-right-from-square ml-1"></i>
            </a>
        </p>
        <div>
            <p class="text-gray-400 mb-6 font-semibold">
                Connect with me on social media:
            </p>
            <div class="flex gap-6 justify-center contact">
                {
                    portfolioData.socials.map((social) => (
                        <a
                            href={social.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-white text-3xl transition-all duration-300"
                            style="display: inline-block;"
                            title={social.name}
                        >
                            <i class={`fab fa-${social.icon}`} />
                        </a>
                    ))
                }
            </div>
        </div>
    </div>

    <div class="background-two">
        <div class="circle-two">
            <div class="circle1-two">
                <div class="circle2-two"></div>
            </div>
        </div>
    </div>
</section>

<script>
    document
        .querySelectorAll<HTMLElement>(
            ".fa-github, .fa-facebook, .fa-instagram, .fa-linkedin",
        )
        .forEach((icon) => {
            icon.parentElement?.addEventListener("mouseenter", function () {
                icon.style.transform = "rotate(360deg) scale(1.25)";
            });
            icon.parentElement?.addEventListener("mouseleave", function () {
                icon.style.transform = "rotate(0deg) scale(1)";
            });
        });
</script>

<style>
    a[href^="mailto"] {
        transition: all 0.6s ease;
    }

    a[href^="mailto"]:hover {
        background-color: #e5e7eb !important;
        color: black !important;
        border-color: #2d2d2d !important;
    }
</style>
